@model IEnumerable<PhotoGalleryApp.Models.Photo>

@{
    ViewData["Title"] = "Gallery";
    var currentRole = ViewBag.CurrentRole as string ?? "";
}

<div class="row mb-3">
    <div class="col-md-8">
        <form class="row g-2" method="get">
            <div class="col-auto">
                <input name="search" value="@ViewBag.Search" class="form-control" placeholder="Search title or description" />
            </div>
            <div class="col-auto">
                <input name="tag" value="@ViewBag.Tag" class="form-control" placeholder="Filter by tag" />
            </div>
            <div class="col-auto">
                <button class="btn btn-primary" type="submit">Search</button>
                <a class="btn btn-outline-secondary" href="@Url.Action("Index")">Clear</a>
            </div>
        </form>
    </div>

    <div class="col-md-4 text-end">
        @if (Context.Session.GetInt32("UserId") == 0)
        {
            <a class="btn btn-success" asp-controller="Account" asp-action="Login">Login</a>
        }
    </div>
</div>

<div class="row">
    @foreach (var photo in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
            <div class="card h-100">
                <img src="@photo.FilePath" class="card-img-top" style="object-fit:cover; height:180px;" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@photo.Title</h5>
                    <p class="card-text">@photo.Description</p>
                    <p class="mb-1"><small>Tags: @photo.Tags</small></p>
                    <p class="mb-2"><small>By: @photo.UploadedBy?.Username  | @photo.UploadedAt.ToLocalTime().ToString("g")</small></p>
                    <div class="mt-auto d-flex justify-content-between">
                        <a class="btn btn-sm btn-outline-primary" asp-controller="Photo" asp-action="Details" asp-route-id="@photo.Id">Details</a>
                        @if (currentRole == "Admin")
                        {
                            <div class="d-flex gap-2">
                                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@photo.Id">Edit</a>
                                <form asp-action="Delete" method="post" onsubmit="return confirm('Delete this photo (soft delete)?');">
                                    <input type="hidden" name="id" value="@photo.Id" />
                                    <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                                </form>
                            </div>
                        }
                        
                    </div>
                </div>
            </div>
        </div>
    }
</div>
