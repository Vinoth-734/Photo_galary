@model PhotoGalleryApp.Models.Photo
@{
    ViewData["Title"] = "Photo Details";
}

<div class="row">
    <div class="col-md-8">
        <img src="@Model.FilePath" class="img-fluid" />
    </div>
    <div class="col-md-4">
        <h2>@Model.Title</h2>
        <p>@Model.Description</p>
        <p><strong>Tags:</strong> @Model.Tags</p>
        <p><strong>Uploaded by:</strong> @Model.UploadedBy?.Username</p>
        <p><strong>Uploaded at:</strong> @Model.UploadedAt.ToLocalTime().ToString("g")</p>

        <a class="btn btn-secondary" asp-action="Index">Back</a>
    </div>
</div>
