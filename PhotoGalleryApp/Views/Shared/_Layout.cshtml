<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Photo Gallery App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
        <div class="container">
            <a class="navbar-brand" asp-controller="Photo" asp-action="Index">PhotoGallery</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Photo" asp-action="Index">Gallery</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Photo" asp-action="Upload">Upload</a></li>
                </ul>

                <ul class="navbar-nav">
                    @if (Context.Session.GetInt32("UserId") is int uid && uid > 0)
                    {
                        <li class="nav-item"><span class="nav-link">User: @Context.Session.GetString("Role")</span></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-info">@TempData["Message"]</div>
        }

        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
